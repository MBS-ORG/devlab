{
  "name": "ultra-automated-devcontainer-framework",
  "version": "1.1.1",
  "description": "Production-grade, maximally-automated workflow system leveraging GitHub Codespaces, Dev Containers, and CI/CD",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run clean && npm run build:app",
    "build:app": "echo 'Build step - customize for your application'",
    "clean": "rm -rf dist coverage .nyc_output",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "npm run lint:js && npm run lint:format",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:format": "prettier --check '**/*.{js,jsx,ts,tsx,json,md,yml,yaml}'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md,yml,yaml}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,md,yml,yaml}'",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run test:ci",
    "prepare": "husky install || true",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "docker:build": "docker-compose -f .devcontainer/docker-compose.yml build",
    "docker:up": "docker-compose -f .devcontainer/docker-compose.yml up -d",
    "docker:down": "docker-compose -f .devcontainer/docker-compose.yml down",
    "docker:logs": "docker-compose -f .devcontainer/docker-compose.yml logs -f",
    "health": "node scripts/health-check.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npm run security:audit && npm run security:outdated",
    "security:outdated": "npm outdated || true",
    "docs:generate": "jsdoc -c jsdoc.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "keywords": [
    "devcontainer",
    "codespaces",
    "docker",
    "ci-cd",
    "development-environment",
    "automation",
    "github-actions"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "conventional-changelog-cli": "^4.1.0",
    "jsdoc": "^4.0.2",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.test.{js,jsx,ts,tsx}",
      "!src/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
